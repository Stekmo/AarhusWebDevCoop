@inherits Umbraco.Web.Macros.PartialViewMacroPage
	
@{
	var selection = CurrentPage.Site().Children.Where("DocumentTypeAlias == \"projectsOverview\"").First().Children.Where("projectStatus == @0", 11).Where("Visible").OrderBy("CreateDate desc").Take(3);
}

    @foreach (var item in selection)
    {
        <div class="col-md-4">
            <h3><a href="@item.Url">@item.Name</a></h3>
            <p>@item.articlesBodyText</p>
            <p>Published: @item.CreateDate</p>
        </div>

    }
